<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>61</defaultcontrol>
	<controls>
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<texture>black.png</texture>
			<animation effect="fade" start="0" end="70" time="300">WindowOpen</animation>
			<animation effect="fade" start="70" end="0" time="300">WindowClose</animation>
			<visible>!Window.IsVisible(AddonInformation)</visible>
		</control>
		<control type="group">
			<control type="image">
				<left>0</left>
				<top>560</top>
				<width>1280</width>
				<height>140</height>
				<texture border="10">underlay.png</texture>
			</control>
			<control type="label">
				<left>265</left>
				<top>572</top>
				<width>975</width>
				<height>30</height>
				<font>font-30</font>
				<textcolor>blue</textcolor>
				<shadowcolor>black</shadowcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.Label]</label>
				<visible>!ListItem.IsParentFolder</visible>
			</control>
			<control type="textbox">
				<description>textarea</description>
				<left>265</left>
				<top>606</top>
				<width>975</width>
				<height>83</height>
				<label>$INFO[ListItem.Property(Addon.Description)]</label>
				<font>font-19</font>
				<align>justify</align>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<pagecontrol>60</pagecontrol>
				<autoscroll time="3000" delay="16000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
			</control>
			<control type="image">
				<left>8</left>
				<top>505</top>
				<width>210</width>
				<height>210</height>
				<texture>thumb-shadow.png</texture>
				<visible>!ListItem.IsParentFolder</visible>
			</control>
			<control type="image">
				<left>8</left>
				<top>505</top>
				<width>210</width>
				<height>210</height>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<texture diffuse="thumb-diffuse.png" background="true">$INFO[Listitem.Icon]</texture>
				<bordersize>6</bordersize>
				<fadetime>IconCrossfadeTime</fadetime>
				<visible>!ListItem.IsParentFolder</visible>
			</control>
		</control>
		<control type="group">
			<include>dialogeffect4</include>
			<control type="button">
				<left>1240</left>
				<top>20</top>
				<width>20</width>
				<height>20</height>
				<texturefocus>close-window-focus.png</texturefocus>
				<texturenofocus>close-window-nofocus.png</texturenofocus>
				<onclick>Dialog.Close(textviewer)</onclick>
				<visible>Skin.HasSetting(TouchScreenMode)</visible>
			</control>
			<control type="label" id="1">
				<description>heading label</description>
				<left>40</left>
				<top>45</top>
				<width>1200</width>
				<height>30</height>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>blue</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>font-32</font>
				<label>-</label>
			</control>
			<control type="image">
				<left>40</left>
				<top>84</top>
				<width>1200</width>
				<height>2</height>
				<texture>separator.png</texture>
			</control>
			<control type="textbox" id="5">
				<description>textarea</description>
				<left>200</left>
				<top>110</top>
				<width>880</width>
				<height>348</height>
				<label>-</label>
				<font>font-19</font>
				<align>justify</align>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<pagecontrol>61</pagecontrol>
			</control>
			<control type="spincontrol" id="61">
				<description>Next page button</description>
				<left>1180</left>
				<top>699</top>
				<subtype>page</subtype>
				<font>font-19</font>
				<onleft>61</onleft>
				<onright>61</onright>
				<ondown>61</ondown>
				<onup>61</onup>
				<textcolor>white</textcolor>
				<showonepage>true</showonepage>
			</control>
			<control type="image">
				<left>40</left>
				<top>480</top>
				<width>1200</width>
				<height>2</height>
				<texture>separator.png</texture>
			</control>
		</control>
	</controls>
</window>
