<?xml version="1.0" encoding="utf-8"?>
<window>
	<onload>Skin.SetBool(TMDbHelper.Service)</onload>
	<onload>Skin.SetString(TMDbHelper.MonitorContainer,9143)</onload>
	<onload condition="Skin.HasSetting(Use_Startup_Playlist) + !String.IsEmpty(Skin.String(Startup_Playlist_Path))">PlayMedia("$INFO[Skin.String(Startup_Playlist_Path)]")</onload>
	<onload condition="!System.AddonIsEnabled(script.artistslideshow) + String.IsEqual(Skin.String(VizBackground),slideshowfanart)">Skin.Reset(VizBackground)</onload>
	<onload condition="System.AddonIsEnabled(script.artistslideshow) + String.IsEqual(Skin.String(VizBackground),slideshowfanart)">RunScript(script.artistslideshow,daemon=True)</onload>
	<onload>ReplaceWindow($INFO[System.StartupWindow])</onload>
</window>
