<?xml version="1.0" encoding="UTF-8"?>
<window>
	<visible>Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding</visible>
	<controls>
		<control type="group">
			<include>dialogeffect</include>
			<visible>![Window.IsVisible(Notification) | Window.IsVisible(BusyDialog) | Window.IsVisible(SliderDialog) | Window.IsVisible(VolumeBar)]</visible>
			<left>440</left>
			<top>0</top>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>400</width>
				<height>35</height>
				<texture border="16,0,16,0">popup-small.png</texture>
			</control>
			<control type="label">
				<description>Time Label</description>
				<left>3</left>
				<top>4</top>
				<width>90</width>
				<height>25</height>
				<font>font-18</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<align>right</align>
				<aligny>center</aligny>
				<label>$VAR[DialogSeekBarTime]</label>
			</control>
			<control type="progress">
				<description>Progressbar Cache</description>
				<left>100</left>
				<top>9</top>
				<width>205</width>
				<height>15</height>
				<info>Player.ProgressCache</info>
				<midtexture border="10,0,10,0">ProgressCache.png</midtexture>
			</control>
			<control type="progress">
				<description>Progressbar</description>
				<left>100</left>
				<top>9</top>
				<width>205</width>
				<height>15</height>
				<info>Player.Progress</info>
				<visible>true</visible>
			</control>
			<control type="progress">
				<description>Player Caching Progress Bar</description>
				<left>100</left>
				<top>9</top>
				<width>205</width>
				<height>15</height>
				<midtexture border="10,0,10,0">ProgressBuffer.png</midtexture>
				<info>Player.CacheLevel</info>
				<visible>Player.Caching</visible>
			</control>
			<control type="slider" id="401">
				<description>Seek Slider</description>
				<left>104</left>
				<top>12</top>
				<width>198</width>
				<height>9</height>
				<texturesliderbar>seekslider.png</texturesliderbar>
				<textureslidernib>slider_nibFO.png</textureslidernib>
				<textureslidernibfocus>slider_nibFO.png</textureslidernibfocus>
				<visible>Player.Seeking</visible>
			</control>
			<control type="label">
				<description>Label</description>
				<left>100</left>
				<top>3</top>
				<width>205</width>
				<height>25</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font-15</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$VAR[DialogSeekBarLabel]</label>
			</control>
			<control type="label">
				<description>Duration Label</description>
				<left>312</left>
				<top>4</top>
				<width>90</width>
				<height>25</height>
				<font>font-18</font>
				<label>$INFO[Player.Duration]</label>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<align>left</align>
				<aligny>center</aligny>
			</control>
		</control>
		<control type="group">
			<left>1000</left>
			<top>500</top>
			<animation effect="slide" start="280,0" end="0,0" time="300">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="280,0" time="300" tween="quadratic" easing="in">WindowClose</animation>
			<animation effect="slide" start="0,0" end="280,0" time="300" tween="quadratic" easing="in">Hidden</animation>
			<include condition="Skin.HasSetting(ClearArt)">clearart-dialogseekbar</include>
			<visible>Player.Paused</visible>
			<control type="group">
				<left>30</left>
				<top>-25</top>
				<width>370</width>
				<height>190</height>
				<camera x="150" y="80"/>
				<animation effect="rotatey" start="0" end="30" condition="true" center="auto">Conditional</animation>
				<visible>[VideoPlayer.Content(Episodes) + [!Skin.HasSetting(ClearArt) | [String.IsEmpty(Control.GetLabel(7019)) + String.IsEmpty(Control.GetLabel(7020))] | Skin.HasSetting(Safemode) | String.Contains(Player.FolderPath,pvr://) | String.Contains(Player.FolderPath,http://) | String.Contains(Player.FolderPath,https://) | String.Contains(Player.FolderPath,htsp://)] + Window.IsVisible(FullscreenVideo) + !Window.IsVisible(FullscreenInfo) + !Window.IsVisible(VideoOSD)] | [VideoPlayer.Content(Movies) + [String.StartsWith(Player.FileNameAndPath,http) | String.StartsWith(Player.FileNameAndPath,mms) | String.StartsWith(Player.FileNameAndPath,rtmp)]]</visible>
				<control type="image">
					<left>-52</left>
					<top>44</top>
					<width>279</width>
					<height>157</height>
					<texture>$INFO[Player.Art(thumb)]</texture>
				</control>
				<control type="image">
					<left>-100</left>
					<top>30</top>
					<width>370</width>
					<height>190</height>
					<texture>movie-frame.png</texture>
				</control>
			</control>
			<control type="group">
				<left>30</left>
				<top>-25</top>
				<width>157</width>
				<height>206</height>
				<camera x="150" y="80"/>
				<animation effect="rotatey" start="0" end="30" condition="true" center="auto">Conditional</animation>
				<visible>VideoPlayer.Content(Movies) + Window.IsVisible(FullscreenVideo) + !Window.IsVisible(FullscreenInfo) + !Window.IsVisible(VideoOSD) + ![String.StartsWith(Player.FileNameAndPath,http) | String.StartsWith(Player.FileNameAndPath,mms) | String.StartsWith(Player.FileNameAndPath,rtmp)]</visible>
				<control type="image">
					<left>138</left>
					<top>18</top>
					<width>140</width>
					<height>200</height>
					<texture>$INFO[Player.Art(thumb)]</texture>
				</control>
				<control type="image">
					<left>138</left>
					<top>0</top>
					<width>150</width>
					<height>232</height>
					<texture fallback="case-sets.png">case$INFO[VideoPlayer.VideoResolution].png</texture>
					<visible>!Skin.HasSetting(HideMovieCase)</visible>
				</control>
			</control>
			<control type="group">
				<left>30</left>
				<top>-30</top>
				<width>228</width>
				<height>208</height>
				<camera x="150" y="80"/>
				<animation effect="rotatey" start="0" end="30" condition="true" center="auto">Conditional</animation>
				<control type="image">
					<left>76</left>
					<top>16</top>
					<width>200</width>
					<height>200</height>
					<texture>$INFO[MusicPlayer.Cover]</texture>
					<visible>Player.HasAudio + Window.IsVisible(Visualisation) + !Window.IsVisible(MusicOSD) + !Player.ShowInfo</visible>
				</control>
				<control type="image">
					<left>44</left>
					<top>2</top>
					<width>248</width>
					<height>228</height>
					<texture diffuse="cdcase-diffuse.png">cdcase.png</texture>
					<bordersize>10</bordersize>
					<bordertexture border="10">cdcase-shadow.png</bordertexture>
					<visible>Player.HasAudio + Window.IsVisible(Visualisation) + !Window.IsVisible(MusicOSD) + !Player.ShowInfo + !String.IsEmpty(MusicPlayer.cover) + !Skin.HasSetting(HideMusicCase)</visible>
				</control>
			</control>
		</control>
	</controls>
</window>
