<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>-</defaultcontrol>
	<controls>
		<control type="button">
			<left>1240</left>
			<top>20</top>
			<width>20</width>
			<height>20</height>
			<texturefocus>close-window-focus.png</texturefocus>
			<texturenofocus>close-window-nofocus.png</texturenofocus>
			<onclick>PreviousMenu</onclick>
			<visible>Skin.HasSetting(TouchScreenMode)</visible>
		</control>
		<!-- media infos -->
		<control type="group">
			<left>20</left>
			<top>630</top>
			<visible>Player.ShowInfo + Player.HasMedia</visible>
			<include>VisibleFadeEffect</include>
			<control type="image">
				<left>-20</left>
				<top>0</top>
				<width>500</width>
				<height>80</height>
				<texture border="2">gradient2.png</texture>
			</control>
			<control type="image">
				<left>15</left>
				<top>8</top>
				<width>63</width>
				<height>63</height>
				<texture>$INFO[MusicPlayer.Cover]</texture>
			</control>
			<control type="image">
				<left>9</left>
				<top>7</top>
				<width>71</width>
				<height>65</height>
				<texture>cdcase.png</texture>
				<visible>!Skin.HasSetting(HideMusicCase)</visible>
			</control>
			<control type="label">
				<left>90</left>
				<top>9</top>
				<width>400</width>
				<height>20</height>
				<label>$INFO[MusicPlayer.Title]</label>
				<align>left</align>
				<aligny>center</aligny>
				<font>font-19</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="label">
				<left>90</left>
				<top>30</top>
				<width>400</width>
				<height>20</height>
				<label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, - ]</label>
				<align>left</align>
				<aligny>center</aligny>
				<font>font-19</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="label">
				<left>80</left>
				<top>51</top>
				<width>70</width>
				<height>20</height>
				<label>$INFO[MusicPlayer.Time]</label>
				<align>right</align>
				<aligny>center</aligny>
				<font>font-19</font>
				<textcolor>grey</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="progress">
				<description>progress control</description>
				<left>152</left>
				<top>55</top>
				<width>266</width>
				<height>15</height>
				<info>Player.progress</info>
			</control>
			<control type="slider" id="888">
				<description>Slider</description>
				<left>152</left>
				<top>55</top>
				<width>266</width>
				<height>15</height>
				<action>seek</action>
			</control>
			<control type="label">
				<left>420</left>
				<top>51</top>
				<width>70</width>
				<height>20</height>
				<label>$INFO[MusicPlayer.Duration]</label>
				<align>left</align>
				<aligny>center</aligny>
				<font>font-19</font>
				<textcolor>grey</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
		</control>
	</controls>
</window>
