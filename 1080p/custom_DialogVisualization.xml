<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="1112">
	<defaultcontrol>1000</defaultcontrol>
	<coordinates>
		<left>360</left>
		<top>30</top>
	</coordinates>
	<include>dialogeffect</include>
	<controls>
		<control type="group">
			<include content="DialogFade">
				<param name="condition">Window.IsVisible(filebrowser) | Window.IsVisible(addonsettings)</param>
			</include>
			<control type="image">
				<description>background image</description>
				<left>0</left>
				<top>0</top>
				<width>1200</width>
				<height>788</height>
				<texture border="17">panel.png</texture>
				<bordersize>11</bordersize>
			</control>
			<control type="button">
				<left>1116</left>
				<top>48</top>
				<width>30</width>
				<height>30</height>
				<texturefocus>close-window-focus.png</texturefocus>
				<texturenofocus>close-window-nofocus.png</texturenofocus>
				<onclick>Dialog.Close(1112)</onclick>
				<visible>Skin.HasSetting(TouchScreenMode)</visible>
			</control>
			<control type="label">
				<description>heading label</description>
				<left>60</left>
				<top>60</top>
				<width>1080</width>
				<height>45</height>
				<label>$LOCALIZE[31184]</label>
				<align>center</align>
				<aligny>center</aligny>
				<font>font-32</font>
				<textcolor>blue</textcolor>
			</control>
			<control type="image">
				<left>60</left>
				<top>117</top>
				<width>1080</width>
				<height>3</height>
				<texture>separator.png</texture>
			</control>
			<control type="grouplist" id="1000">
				<left>68</left>
				<top>120</top>
				<width>1065</width>
				<height>572</height>
				<onup>1000</onup>
				<ondown>1001</ondown>
				<itemgap>0</itemgap>
				<control type="radiobutton" id="991">
					<description>fanart button</description>
					<width>1065</width>
					<label>$LOCALIZE[31030]</label>
					<font>font-18</font>
					<selected>String.IsEmpty(Skin.String(VizBackground))</selected>
					<onclick>Skin.Reset(VizBackground)</onclick>
				</control>
				<control type="radiobutton" id="992">
					<description>extrafanart button</description>
					<width>1065</width>
					<label>$LOCALIZE[31221]</label>
					<font>font-18</font>
					<selected>String.IsEqual(Skin.String(VizBackground),extrafanart)</selected>
					<onclick>Skin.SetString(VizBackground,extrafanart)</onclick>
				</control>
				<control type="radiobutton" id="993">
					<description>artist slideshow button</description>
					<width>1065</width>
					<label>$LOCALIZE[31225]</label>
					<font>font-18</font>
					<selected>String.IsEqual(Skin.String(VizBackground),slideshowfanart)</selected>
					<onclick condition="System.AddonIsEnabled(script.artistslideshow)">Skin.SetString(VizBackground,slideshowfanart)</onclick>
					<onclick condition="System.AddonIsEnabled(script.artistslideshow) + String.IsEmpty(Window(Visualisation).Property(ArtistSlideshowRunning))">RunScript(script.artistslideshow,daemon=True)</onclick>
					<onclick condition="!System.HasAddon(script.artistslideshow)">InstallAddon(script.artistslideshow)</onclick>
					<onclick condition="System.HasAddon(script.artistslideshow) + !System.AddonIsEnabled(script.artistslideshow)">EnableAddon(script.artistslideshow)</onclick>
				</control>
				<control type="button" id="994">
					<description>artist slideshow settings button</description>
					<width>1065</width>
					<label> - $INFO[System.AddonTitle(script.artistslideshow)] $LOCALIZE[5]</label>
					<font>font-18</font>
					<onclick condition="System.AddonIsEnabled(script.artistslideshow)">Addon.OpenSettings(script.artistslideshow)</onclick>
					<visible>String.IsEqual(Skin.String(VizBackground),slideshowfanart)</visible>
				</control>
				<control type="radiobutton" id="995">
					<description>cd wall button</description>
					<width>1065</width>
					<label>$LOCALIZE[541]</label>
					<font>font-18</font>
					<selected>String.IsEqual(Skin.String(VizBackground),cdwallfanart)</selected>
					<onclick>Skin.SetString(VizBackground,cdwallfanart)</onclick>
				</control>
				<control type="button" id="996">
					<description>cd wall path button</description>
					<width>1065</width>
					<label>$LOCALIZE[15311]</label>
					<label2>$INFO[Skin.String(CDWall_Folder_Path)]</label2>
					<font>font-18</font>
					<onclick>Skin.SetPath(CDWall_Folder_Path)</onclick>
					<enable>String.IsEqual(Skin.String(VizBackground),cdwallfanart)</enable>
				</control>
				<control type="radiobutton" id="997">
					<description>visualisation button</description>
					<width>1065</width>
					<label>$LOCALIZE[510]</label>
					<font>font-18</font>
					<selected>!Skin.HasSetting(Vis-Visualization)</selected>
					<onclick>Skin.ToggleSetting(Vis-Visualization)</onclick>
				</control>
				<control type="radiobutton" id="998">
					<description>scroll labels button</description>
					<width>1065</width>
					<label>$LOCALIZE[31103]</label>
					<font>font-18</font>
					<selected>Skin.HasSetting(Vis-ScrollTitles)</selected>
					<onclick>Skin.ToggleSetting(Vis-ScrollTitles)</onclick>
				</control>
			</control>
			<control type="button" id="1001">
				<description>OK Button</description>
				<left>510</left>
				<top>675</top>
				<width>300</width>
				<label>$LOCALIZE[186]</label>
				<align>center</align>
				<aligny>center</aligny>
				<onleft>1001</onleft>
				<onright>1001</onright>
				<onup>998</onup>
				<ondown>991</ondown>
				<onclick>Dialog.Close(1112)</onclick>
			</control>
		</control>
	</controls>
</window>
