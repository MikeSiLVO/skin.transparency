<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<control type="karvisualisation" id="1">
			<description>visualisation</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
		</control>
		<control type="image" id="2">
			<description>fullscreen image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
		</control>
		<control type="button">
			<posx>1240</posx>
			<posy>20</posy>
			<width>20</width>
			<height>20</height>
			<texturefocus>close-window-focus.png</texturefocus>
			<texturenofocus>close-window-nofocus.png</texturenofocus>
			<onclick>Dialog.Close(karaokelyrics)</onclick>
			<visible>Skin.HasSetting(TouchScreenMode)</visible>
		</control>
		<control type="group">
			<posx>0</posx>
			<posy>620</posy>
			<animation effect="slide" start="0,100" end="0,0" time="300">Visible</animation>
			<animation effect="slide" start="0,0" end="0,100" time="300">Hidden</animation>
			<visible>MusicPlayer.HasNext + !IntegerGreaterThan(Player.TimeRemaining,20)</visible>
			<control type="image">
				<description>media info background image</description>
				<posx>-28</posx>
				<posy>32</posy>
				<width>1336</width>
				<height>222</height>
				<texture border="17">panel.png</texture>
				<bordersize>11</bordersize>
			</control>
			<control type="label" id="402">
				<description>Next Song Name</description>
				<posx>360</posx>
				<posy>46</posy>
				<width>665</width>
				<height>60</height>
				<font>font-23</font>
				<textcolor>white</textcolor>
				<label>[COLOR=lightblue]$LOCALIZE[209]: [/COLOR]$INFO[MusicPlayer.Offset(1).Title]</label>
				<align>left</align>
				<aligny>center</aligny>
			</control>
		</control>
	</controls>
</window>
