<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>-</defaultcontrol>
	<controls>
		<control type="button">
			<posx>1240</posx>
			<posy>20</posy>
			<width>20</width>
			<height>20</height>
			<texturefocus>close-window-focus.png</texturefocus>
			<texturenofocus>close-window-nofocus.png</texturenofocus>
			<onclick>PreviousMenu</onclick>
			<visible>Skin.HasSetting(TouchScreenMode)</visible>
		</control>
		<!-- media infos -->
		<control type="group">
			<posx>20</posx>
			<posy>630</posy>
			<visible>Player.ShowInfo + Player.HasMedia</visible>
			<include>VisibleFadeEffect</include>
			<control type="image">
				<posx>-20</posx>
				<posy>0</posy>
				<width>500</width>
				<height>80</height>
				<texture border="2">gradient2.png</texture>
			</control>
			<control type="image">
				<posx>15</posx>
				<posy>8</posy>
				<width>63</width>
				<height>63</height>
				<texture>$INFO[MusicPlayer.Cover]</texture>
			</control>
			<control type="image">
				<posx>9</posx>
				<posy>7</posy>
				<width>71</width>
				<height>65</height>
				<texture>cdcase.png</texture>
				<visible>!Skin.HasSetting(HideMusicCase)</visible>
			</control>
			<control type="label">
				<posx>90</posx>
				<posy>9</posy>
				<width>400</width>
				<height>20</height>
				<label>$INFO[MusicPlayer.Title]</label>
				<align>left</align>
				<aligny>center</aligny>
				<font>font-19</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="label">
				<posx>90</posx>
				<posy>30</posy>
				<width>400</width>
				<height>20</height>
				<label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, - ]</label>
				<align>left</align>
				<aligny>center</aligny>
				<font>font-19</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="label">
				<posx>150</posx>
				<posy>51</posy>
				<width>70</width>
				<height>20</height>
				<label>$INFO[MusicPlayer.Time]</label>
				<align>right</align>
				<aligny>center</aligny>
				<font>font-19</font>
				<textcolor>grey</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="progress">
				<description>progress control</description>
				<posx>152</posx>
				<posy>55</posy>
				<width>266</width>
				<height>15</height>
				<info>Player.progress</info>
			</control>
			<control type="slider" id="888">
				<description>Slider</description>
				<posx>152</posx>
				<posy>55</posy>
				<width>266</width>
				<height>15</height>
				<action>seek</action>
			</control>
			<control type="label">
				<posx>420</posx>
				<posy>51</posy>
				<width>70</width>
				<height>20</height>
				<label>$INFO[MusicPlayer.Duration]</label>
				<align>left</align>
				<aligny>center</aligny>
				<font>font-19</font>
				<textcolor>grey</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
		</control>
	</controls>
</window>
