<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<menucontrol>9000</menucontrol>
	<views>50,51,52,59</views>
	<controls>
		<include condition="!Skin.HasSetting(HideVideoBackgrounds)">CommonVideoPlayingBackground</include>
		<control type="multiimage">
			<description>fallback if no playing or list fanart is available</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>2000</fadetime>
			<imagepath fallback="special://skin/backgrounds/background-music.jpg" background="true">$INFO[Skin.String(Custom_Back_Music_Folder)]</imagepath>
			<aspectratio>scale</aspectratio>
			<include condition="Skin.HasSetting(AnimateBackgrounds)">backgroundanimation</include>
			<include>VisibleFadeEffect</include>
			<visible>IsEmpty(ListItem.Property(Fanart_Image)) + IsEmpty(MusicPlayer.Property(Fanart_Image)) + ![Player.HasVideo + !Skin.HasSetting(HideVideoBackgrounds)]</visible>
		</control>
		<control type="image">
			<description>song fanart</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
			<aspectratio>scale</aspectratio>
			<fadetime>FanartCrossfadeTime</fadetime>
			<include>VisibleFadeEffect</include>
			<include condition="Skin.HasSetting(AnimateFanart)">backgroundanimation</include>
			<visible>!Player.HasAudio | [Player.HasAudio + IsEmpty(MusicPlayer.Property(Fanart_Image))] + ![Player.HasVideo + !Skin.HasSetting(HideVideoBackgrounds)]</visible>
		</control>
		<control type="image">
			<description>song playing fanart</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture background="true">$INFO[MusicPlayer.Property(Fanart_Image)]</texture>
			<aspectratio>scale</aspectratio>
			<fadetime>FanartCrossfadeTime</fadetime>
			<include>VisibleFadeEffect</include>
			<include condition="Skin.HasSetting(AnimateFanart)">backgroundanimation</include>
			<visible>Player.HasAudio</visible>
		</control>
		<include condition="!Skin.HasSetting(HideVisBackgrounds)">CommonVisualizationBackground</include>
		<control type="group">
			<include>ContentFade</include>
			<control type="group">
				<include>Window_OpenClose_Right_Panel_Animation</include>
				<include>ContentPanel</include>
				<include condition="!Skin.HasSetting(Hide-Music-FullList)">FullList-Music</include>
				<include condition="!Skin.HasSetting(Hide-Music-List)">List-Music</include>
				<include condition="!Skin.HasSetting(Hide-Music-MediaInfo)">MediaInfo-Music</include>
				<include>Fanart-Music</include>
				<include>AllViewCommonPageControls</include>
				<include>ScrollOffsetLabel</include>
				<animation effect="slide" start="0,0" end="700,116" time="300" tween="quadratic" easing="out" condition="Control.IsVisible(50) + !Skin.HasSetting(FanartShort) + !Skin.HasSetting(FanartLong)">Conditional</animation>
				<animation effect="slide" start="0,0" end="700,262" time="300" tween="quadratic" easing="out" condition="Control.IsVisible(50) + Skin.HasSetting(FanartShort)">Conditional</animation>
				<animation effect="slide" start="0,0" end="700,-127" time="300" tween="quadratic" easing="out" condition="Control.IsVisible(50) + Skin.HasSetting(FanartLong)">Conditional</animation>
				<animation effect="slide" start="0,0" end="75,0" time="200" delay="200" tween="quadratic" easing="out" condition="Skin.HasSetting(WideSideMenuButtons) + ControlGroup(9000).HasFocus + !Control.IsVisible(50)">Conditional</animation>
			</control>
		</control>
		<control type="group">
			<include>ContentFade2</include>
			<include>Fanart-AlbumsSongs_Extras</include>
		</control>
		<control type="group">
			<posy>23</posy>
			<include>ContentFade</include>
			<include>Window_OpenClose_Left_Panel_Animation</include>
			<include>CommonNowPlaying</include>
			<visible>![Skin.HasSetting(KioskMode) + !Player.HasMedia]</visible>
			<control type="grouplist" id="9000">
				<include condition="!Skin.HasSetting(WideSideMenuButtons)">Window_OpenClose_Left_Panel_Position_Normal</include>
				<include condition="Skin.HasSetting(WideSideMenuButtons)">Window_OpenClose_Left_Panel_Position_Wide</include>
				<include>SideMenuAnim</include>
				<onleft>50</onleft>
				<onright>50</onright>
				<itemgap>-1</itemgap>
				<control type="button" id="2">
					<description>View As button</description>
					<posx>0</posx>
					<posy>0</posy>
					<include>ButtonCommonValues</include>
					<label>-</label>
					<visible>!Skin.HasSetting(KioskMode)</visible>
				</control>
				<control type="radiobutton" id="20">
					<description>Shuffle button</description>
					<posx>0</posx>
					<posy>45</posy>
					<include>ButtonCommonValues</include>
					<label>191</label>
					<visible>!Skin.HasSetting(KioskMode)</visible>
				</control>
				<control type="button" id="26">
					<description>Repeat button</description>
					<posx>0</posx>
					<posy>90</posy>
					<include>ButtonCommonValues</include>
					<label>-</label>
					<visible>!Skin.HasSetting(KioskMode)</visible>
				</control>
				<control type="button" id="21">
					<description>Save button</description>
					<posx>0</posx>
					<posy>135</posy>
					<label>190</label>
					<include>ButtonCommonValues</include>
					<visible>!Skin.HasSetting(KioskMode)</visible>
				</control>
				<control type="button" id="22">
					<description>Clear button</description>
					<posx>0</posx>
					<posy>180</posy>
					<label>192</label>
					<onclick>ReplaceWindow(music)</onclick>
					<include>ButtonCommonValues</include>
					<visible>!Skin.HasSetting(KioskMode)</visible>
				</control>
				<control type="button" id="610">
					<description>PlayerControls</description>
					<posx>0</posx>
					<posy>225</posy>
					<include>ButtonCommonValues</include>
					<label>16003</label>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<visible>Player.HasAudio | Player.HasVideo</visible>
				</control>
			</control>
		</control>
		<control type="group">
			<include>ContentFade</include>
			<include>Window_OpenClose_Header_Animation</include>
			<animation effect="slide" start="0,0" end="0,-55" time="300" tween="quadratic" easing="out" condition="Control.IsVisible(50)">Conditional</animation>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>55</height>
				<texture border="1">Header.png</texture>
			</control>
			<include>CommonFileCount</include>
			<control type="grouplist">
				<include>Breadcrumbs</include>
				<include>Breadcrumbs-MusicPlaylist</include>
			</control>
		</control>
		<include condition="Skin.HasSetting(TouchScreenMode)">TouchScreenControls</include>
		<include condition="Skin.HasSetting(DebugMode)">debuginfo</include>
	</controls>
</window>
