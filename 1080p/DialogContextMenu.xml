<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol>1000</defaultcontrol>
	<include>dialogeffect3</include>
	<controls>
		<control type="image" id="999">
			<description>background image</description>
			<left>0</left>
			<top>0</top>
			<width>570</width>
			<height>1080</height>
			<texture border="32">dialog.png</texture>
		</control>
		<control type="button">
			<left>488</left>
			<top>60</top>
			<width>30</width>
			<height>30</height>
			<texturefocus>close-window-focus.png</texturefocus>
			<texturenofocus>close-window-nofocus.png</texturenofocus>
			<onclick>Dialog.Close(contextmenu)</onclick>
			<visible>Skin.HasSetting(TouchScreenMode)</visible>
		</control>
		<control type="label">
			<description>header label</description>
			<left>60</left>
			<top>68</top>
			<width>450</width>
			<height>45</height>
			<font>font-30c</font>
			<label>[B][UPPERCASE]$LOCALIZE[33061][/UPPERCASE][/B]</label>
			<align>center</align>
			<aligny>center</aligny>
			<textcolor>blue</textcolor>
		</control>
		<control type="image">
			<left>128</left>
			<top>112</top>
			<width>315</width>
			<height>3</height>
			<texture border="30,0,30,0">separator.png</texture>
		</control>
		<control type="grouplist" id="996">
			<description>grouplist for context buttons</description>
			<left>60</left>
			<top>128</top>
			<width>450</width>
			<height min="15" max="892">auto</height>
			<itemgap>0</itemgap>
			<control type="button" id="1245">
				<left>0</left>
				<top>0</top>
				<width>450</width>
				<height>52</height>
				<label>$VAR[ContextMenu]</label>
				<font>font-20</font>
				<align>center</align>
				<textcolor>white</textcolor>
				<focusedcolor>lightblue</focusedcolor>
				<texturefocus border="7">list-focus.png</texturefocus>
				<texturenofocus border="7">list-nofocus.png</texturenofocus>
				<onclick>RunScript(script.metadata.actors,$INFO[ListItem.Label])</onclick>
				<visible>System.HasAddon(script.metadata.actors) + [String.Contains(Container.FolderPath,videodb://movies/actors/) | String.Contains(Container.FolderPath,videodb://movies/directors/) | String.Contains(Container.FolderPath,videodb://tvshows/actors/)]</visible>
			</control>
		</control>
		<control type="button" id="1000">
			<description>button template</description>
			<left>0</left>
			<top>0</top>
			<width>450</width>
			<height>52</height>
			<font>font-20</font>
			<align>center</align>
			<textcolor>white</textcolor>
			<focusedcolor>lightblue</focusedcolor>
			<texturefocus border="7">list-focus.png</texturefocus>
			<texturenofocus border="7">list-nofocus.png</texturenofocus>
		</control>
	</controls>
</window>
