<includes>
	<include name="CommonBackground">
		<param name="fadetime">2000</param>
		<definition>
			<control type="multiimage">
				<include>FullscreenDimensions</include>
				<timeperimage>7000</timeperimage>
				<randomize>true</randomize>
				<fadetime>$PARAM[fadetime]</fadetime>
				<aspectratio>scale</aspectratio>
				<imagepath fallback="$PARAM[fallback]" background="true">$PARAM[imagepath]</imagepath>
				<include>backgroundanimation</include>
			</control>
			<include content="GenreBackground" condition="Window.IsVisible(videos) + Skin.HasSetting(VideoGenreBackgrounds) | Window.IsVisible(music) + Skin.HasSetting(MusicGenreBackgrounds)">
				<param name="genrefolder" value="$PARAM[genrefolder]" />
			</include>
		</definition>
	</include>
	<include name="GenreBackground">
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture background="true">$PARAM[genrefolder]$INFO[ListItem.Label,,.jpg]</texture>
			<aspectratio>scale</aspectratio>
			<fadetime>FanartCrossfadeTime</fadetime>
			<include condition="Skin.HasSetting(AnimateFanart)">backgroundanimation</include>
			<include>VisibleFadeEffect</include>
		</control>
	</include>
	<include name="SettingsPanelBackground">
		<control type="image">
			<left>266</left>
			<top>169</top>
			<width>1391</width>
			<height>744</height>
			<texture diffuse="panel-diffuse.png">$VAR[SettingsPanelBackgroundPath]</texture>
			<animation effect="zoom" start="788,458,345,208" end="266,169,1391,744" time="300">WindowOpen</animation>
			<animation effect="zoom" start="266,169,1391,744" end="788,458,345,208" time="300" delay="350">WindowClose</animation>
			<animation effect="slide" start="0,0" end="112,0" time="200" delay="200" tween="quadratic" easing="out" condition="[[ControlGroup(9000).HasFocus + !Window.IsVisible(SettingsCategory.xml) + !Window.IsVisible(eventlog) + ![Window.IsVisible(addonbrowser) + Control.IsVisible(50)]] | [[Window.IsVisible(SettingsCategory.xml) | Window.IsVisible(eventlog)] + !Control.HasFocus(90) + !ControlGroup(5).HasFocus]] + Skin.HasSetting(WideSideMenuButtons)">Conditional</animation>
			<include>ContentFade</include>
		</control>
	</include>
	<include name="BackgroundDim">
		<param name="colordiffuse">B3FFFFFF</param>
		<param name="visible">true</param>
		<definition>
			<control type="image">
				<include>FullscreenDimensions</include>
				<texture colordiffuse="$PARAM[colordiffuse]">colors/black.png</texture>
				<visible>$PARAM[visible]</visible>
			</control>
		</definition>
	</include>
	<include name="BackgroundUnderlay">
		<param name="width">1920</param>
		<param name="alt">false</param>
		<param name="visible">true</param>
		<definition>
			<control type="image">
				<top>$PARAM[top]</top>
				<width>$PARAM[width]</width>
				<height>$PARAM[height]</height>
				<include condition="!$PARAM[alt]">DefaultUnderlayTexture</include>
				<include condition="$PARAM[alt]">AltUnderlayTexture</include>
				<visible>$PARAM[visible]</visible>
			</control>
		</definition>
	</include>
	<include name="DefaultUnderlayTexture">
		<texture border="10">underlay.png</texture>
	</include>
	<include name="AltUnderlayTexture">
		<texture diffuse="underlay-diffuse.png" border="0,10,0,10">underlay.png</texture>
	</include>
