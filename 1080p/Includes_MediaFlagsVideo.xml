<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="VideoMediaFlags">
		<visible>!ListItem.IsParentFolder + !String.StartsWith(ListItem.Path,videodb://movies/sets/)</visible>
		<include content="LabelFlag">
			<param name="label">$INFO[ListItem.VideoResolution]</param>
		</include>
		<include content="LabelFlag">
			<param name="left">102</param>
			<param name="label">$INFO[ListItem.VideoAspect]</param>
		</include>
		<include content="DefaultFlag">
			<param name="left">204</param>
			<param name="fallback">mediaflag-videocodec.png</param>
			<param name="texture">$INFO[ListItem.VideoCodec,flags/default/videocodec/,.png]</param>
		</include>
		<control type="image">
			<left>306</left>
			<top>0</top>
			<width>96</width>
			<height>72</height>
			<texture fallback="mediaflag-audiocodec.png">$VAR[IncludesMediaFlagsVideoAudioCodec]</texture>
		</control>
		<include content="DefaultFlag">
			<param name="left">408</param>
			<param name="fallback">mediaflag-source.png</param>
			<param name="texture">$VAR[IncludesMediaFlagsVideoSource]</param>
		</include>
		<include content="DefaultFlag">
			<param name="left">510</param>
			<param name="texture">$VAR[IncludesMediaFlagsVideoSubtitles]</param>
		</include>
		<control type="image">
			<left>612</left>
			<top>0</top>
			<width>96</width>
			<height>72</height>
			<texture fallback="mediaflag-rating.png">$VAR[IncludesMediaFlagsVideoRating]</texture>
		</control>
		<control type="image">
			<left>714</left>
			<top>0</top>
			<width>96</width>
			<height>72</height>
			<texture>mediaflag.png</texture>
			<visible>![Container.Content(Movies) + [Control.IsVisible(50) | Control.IsVisible(592)] + !Window.IsVisible(MovieInformation)] + !Control.IsVisible(57) + !Window.IsVisible(VideoPlaylist) + !ListItem.IsParentFolder</visible>
		</control>
		<control type="image">
			<left>726</left>
			<top>9</top>
			<width>78</width>
			<height>52</height>
			<texture fallback="mediaflag-studio.png">$VAR[IncludesMediaFlagsVideoStudio]</texture>
			<fadetime>IconCrossfadeTime</fadetime>
			<visible>[[Container.Content(Movies) + ![[Control.IsVisible(50) | Control.IsVisible(592)] + !Window.IsVisible(MovieInformation)] + !Control.IsVisible(57)] | [!Container.Content(Movies) + !Window.IsVisible(VideoPlaylist)]]  + !ListItem.IsParentFolder</visible>
		</control>
	</include>
	<!-- <include name="MediaFlag">
		<include>$PARAM[include]</include>
	</include> -->
	<include name="DefaultFlag">
		<control type="group">
			<left>$PARAM[left]</left>
			<control type="image">
				<width>96</width>
				<height>72</height>
				<texture>mediaflag.png</texture>
			</control>
			<control type="image">
				<left>3</left>
				<top>3</top>
				<width>90</width>
				<height>66</height>
				<texture fallback="$PARAM[fallback]">$PARAM[texture]</texture>
				<fadetime>IconCrossfadeTime</fadetime>
			</control>
		</control>
	</include>
	<include name="LabelFlag">
		<control type="group">
			<left>$PARAM[left]</left>
			<control type="image">
				<width>96</width>
				<height>72</height>
				<texture>mediaflag.png</texture>
			</control>
			<control type="label">
				<width>96</width>
				<height>72</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font-23</font>
				<label>$PARAM[label]</label>
			</control>
		</control>
	</include>
