<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol>52</defaultcontrol>
	<views>52</views>
	<menucontrol>9000</menucontrol>
	<controls>
		<include condition="!Skin.HasSetting(HideVideoBackgrounds)">CommonVideoPlayingBackground</include>
		<control type="multiimage">
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<height>1080</height>
			<imagepath fallback="special://skin/backgrounds/background-tv.jpg" background="true">$INFO[Skin.String(Custom_Back_TV_Folder)]</imagepath>
			<aspectratio>scale</aspectratio>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>2000</fadetime>
			<include condition="Skin.HasSetting(AnimateBackgrounds)">backgroundanimation</include>
			<visible>![Player.HasVideo + !Skin.HasSetting(HideVideoBackgrounds)]</visible>
		</control>
		<include condition="!Skin.HasSetting(HideVisBackgrounds)">CommonVisualizationBackground</include>
		<control type="group">
			<include>ContentFade</include>
			<include>Window_OpenClose_Right_Panel_Animation</include>
			<control type="group">
				<animation effect="slide" start="0,0" end="112,0" time="200" delay="200" tween="quadratic" easing="out" condition="Skin.HasSetting(WideSideMenuButtons) + ControlGroup(9000).HasFocus">Conditional</animation>
				<include>ContentPanel</include>
				<include>FullList-PVRSearch</include>
				<include>ScrollOffsetLabel</include>
				<include>AllViewCommonPageControls</include>
			</control>
		</control>
		<control type="group">
			<top>34</top>
			<include>ContentFade</include>
			<include>Window_OpenClose_Left_Panel_Animation</include>
			<control type="grouplist" id="9000">
				<include condition="!Skin.HasSetting(WideSideMenuButtons)">Window_OpenClose_Left_Panel_Position_Normal</include>
				<include condition="Skin.HasSetting(WideSideMenuButtons)">Window_OpenClose_Left_Panel_Position_Wide</include>
				<include>SideMenuAnim2</include>
				<onleft>52</onleft>
				<onright>52</onright>
				<itemgap>-2</itemgap>
				<control type="button" id="2">
					<description>View As button</description>
					<include>ButtonCommonValues</include>
					<label></label>
					<visible>!Skin.HasSetting(KioskMode)</visible>
				</control>
				<control type="button" id="3">
					<description>Sort by button</description>
					<include>ButtonCommonValues</include>
					<label>103</label>
					<visible>!Skin.HasSetting(KioskMode)</visible>
				</control>
				<control type="togglebutton" id="4">
					<description>Sort asc</description>
					<include>ButtonCommonValues</include>
					<include>ButtonToggleCommonValues</include>
					<label>$LOCALIZE[31412] $LOCALIZE[584]</label>
					<altlabel>$LOCALIZE[31412] $LOCALIZE[585]</altlabel>
					<visible>!Skin.HasSetting(KioskMode)</visible>
				</control>
				<include>PVR-Menu</include>
			</control>
		</control>
		<control type="group">
			<include>ContentFade</include>
			<include>Window_OpenClose_Header_Animation</include>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1920</width>
				<height>82</height>
				<texture border="1">Header.png</texture>
			</control>
			<control type="group">
				<include>CommonFileCount</include>
			</control>
			<control type="grouplist">
				<left>650</left>
				<top>0</top>
				<width>794</width>
				<height>45</height>
				<orientation>horizontal</orientation>
				<itemgap>0</itemgap>
				<control type="image">
					<width>44</width>
					<height>45</height>
					<texture>dot.png</texture>
				</control>
				<control type="label">
					<description>date label</description>
					<width min="15" max="600">auto</width>
					<height>45</height>
					<aligny>center</aligny>
					<font>font-20</font>
					<textcolor>white</textcolor>
					<label>$INFO[System.Date]</label>
				</control>
				<control type="image">
					<width>44</width>
					<height>45</height>
					<texture>dot.png</texture>
				</control>
				<control type="label">
					<description>time label</description>
					<width min="15" max="150">auto</width>
					<height>45</height>
					<aligny>center</aligny>
					<font>font-20</font>
					<textcolor>white</textcolor>
					<label>$INFO[System.Time]</label>
				</control>
				<control type="image">
					<width>44</width>
					<height>45</height>
					<texture>dot.png</texture>
				</control>
			</control>
			<control type="grouplist">
				<include>Breadcrumbs</include>
				<include>Breadcrumbs-TV</include>
			</control>
		</control>
		<include condition="Skin.HasSetting(TouchScreenMode)">TouchScreenControls</include>
		<include condition="Skin.HasSetting(DebugMode)">debuginfo</include>
	</controls>
</window>
