<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="VideoMediaFlags">
		<param name="condition">false</param>
		<definition>
			<control type="group">
				<left>$PARAM[left]</left>
				<top>$PARAM[top]</top>
				<width>708</width>
				<height>72</height>
				<visible>!ListItem.IsParentFolder + !String.IsEqual(ListItem.DBTYPE,set)</visible>
				<visible>$PARAM[visible]</visible>
				<animation effect="slide" start="0,0" end="-165,12" condition="Window.IsVisible(movieinformation) + String.IsEqual(ListItem.DBTYPE,episode)">Conditional</animation>
				<animation effect="slide" start="0,0" end="-165,0" condition="Window.IsVisible(movieinformation) + String.IsEqual(ListItem.DBTYPE,musicvideo)">Conditional</animation>
				<animation effect="fade" end="70" condition="Control.IsVisible(57)">Conditional</animation>
				<animation effect="zoom" end="90" center="auto" condition="Control.IsVisible(57)">Conditional</animation>
				<animation type="WindowOpen" condition="Control.IsVisible(592)">
					<effect type="fade" start="0" end="100" time="3000" />
				</animation>
				<animation type="WindowClose" condition="Control.IsVisible(592)">
					<effect type="fade" start="100" end="0" time="3000" />
				</animation>
				<animation effect="fade" end="50" condition="Control.IsVisible(592)">Conditional</animation>
				<include content="MediaFlag">
					<param name="is_label">true</param>
					<param name="label">$INFO[ListItem.VideoResolution]</param>
				</include>
				<include content="MediaFlag">
					<param name="is_label">true</param>
					<param name="left">102</param>
					<param name="label">$INFO[ListItem.VideoAspect]</param>
				</include>
				<include content="MediaFlag">
					<param name="is_default">true</param>
					<param name="left">204</param>
					<param name="fallback">mediaflag-videocodec.png</param>
					<param name="texture">$INFO[ListItem.VideoCodec,flags/default/videocodec/,.png]</param>
				</include>
				<control type="image">
					<left>306</left>
					<top>0</top>
					<width>96</width>
					<height>72</height>
					<texture fallback="mediaflag-audiocodec.png">$VAR[IncludesMediaFlagsVideoAudioCodec]</texture>
				</control>
				<include content="MediaFlag">
					<param name="is_default">true</param>
					<param name="left">408</param>
					<param name="fallback">mediaflag-source.png</param>
					<param name="texture">$VAR[IncludesMediaFlagsVideoSource]</param>
				</include>
				<include content="MediaFlag">
					<param name="is_default">true</param>
					<param name="left">510</param>
					<param name="texture">$VAR[IncludesMediaFlagsVideoSubtitles]</param>
				</include>
				<include content="MediaFlag">
					<param name="is_default">true</param>
					<param name="left">612</param>
					<param name="fallback">mediaflag-rating.png</param>
					<param name="texture">$VAR[IncludesMediaFlagsVideoRating]</param>
				</include>
				<!-- <control type="image">
					<left>612</left>
					<top>0</top>
					<width>96</width>
					<height>72</height>
					<texture fallback="mediaflag-rating.png">$VAR[IncludesMediaFlagsVideoRating]</texture>
				</control> -->
				<control type="group">
					<visible>![Container.Content(movies) + Control.IsVisible(50)] + ![Window.IsVisible(movieinformation) + String.IsEqual(ListItem.DBTYPE,movie)] + !Window.IsVisible(videoplaylist)</visible>
					<include content="MediaFlag">
						<param name="is_default">true</param>
						<param name="left">714</param>
						<param name="fallback">mediaflag-studio.png</param>
						<param name="texture">$VAR[IncludesMediaFlagsVideoStudio]</param>
					</include>
				</control>
				<include condition="$PARAM[condition]">LargeMovieStudioFlag</include>
			</control>
		</definition>
	</include>
	<include name="MediaFlag">
		<param name="is_default">false</param>
		<param name="is_label">false</param>
		<definition>
			<include content="DefaultFlag" condition="$PARAM[is_default]">
				<param name="left">$PARAM[left]</param>
				<param name="texture">$PARAM[texture]</param>
			</include>
			<include content="LabelFlag" condition="$PARAM[is_label]">
				<param name="left">$PARAM[left]</param>
				<param name="label">$PARAM[label]</param>
			</include>
		</definition>
	</include>
	<include name="DefaultFlag">
		<control type="group">
			<left>$PARAM[left]</left>
			<control type="image">
				<width>96</width>
				<height>72</height>
				<texture>mediaflag.png</texture>
			</control>
			<control type="image">
				<left>10</left>
				<top>3</top>
				<width>78</width>
				<height>66</height>
				<texture fallback="$PARAM[fallback]">$PARAM[texture]</texture>
				<aspectratio>keep</aspectratio>
				<fadetime>IconCrossfadeTime</fadetime>
			</control>
		</control>
	</include>
	<include name="LabelFlag">
		<definition>
			<control type="group">
				<left>$PARAM[left]</left>
				<control type="image">
					<width>96</width>
					<height>72</height>
					<texture>mediaflag.png</texture>
				</control>
				<control type="label">
					<left>5</left>
					<width>86</width>
					<height>72</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>font-23</font>
					<label>$PARAM[label]</label>
				</control>
			</control>
		</definition>
	</include>
	<include name="AudioFlag">
		<control type="group">
			<left>$PARAM[left]</left>
			<control type="image">
				<width>96</width>
				<height>72</height>
				<texture>mediaflag.png</texture>
			</control>
			<control type="image">
				<width>96</width>
				<height>72</height>
				<texture fallback="$PARAM[fallback]">$PARAM[texture]</texture>
				<fadetime>IconCrossfadeTime</fadetime>
			</control>
			<control type="label">
				<left>$PARAM[]</left>
				<top>$PARAM[]</top>
				<width>$PARAM[]</width>
				<height>$PARAM[]</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font-23</font>
				<label>$PARAM[label]</label>
			</control>
		</control>
	</include>
	<include name="LargeMovieStudioFlag">
		<control type="image">
			<left>748</left>
			<top>-49</top>
			<width>172</width>
			<height>128</height>
			<texture>mediaflag.png</texture>
			<animation effect="zoom" start="0" end="80" time="0" condition="Control.IsVisible(592)">Conditional</animation>
		</control>
		<control type="image">
			<left>765</left>
			<top>-30</top>
			<width>140</width>
			<height>94</height>
			<texture fallback="mediaflag-studio.png">$VAR[IncludesMediaFlagsVideoStudioBig]</texture>
			<animation effect="zoom" start="0" end="80" time="0" condition="Control.IsVisible(592) | Control.IsVisible(598)">Conditional</animation>
			<animation effect="slide" start="0,0" end="1,1" time="0" condition="Control.IsVisible(592) | Control.IsVisible(598)">Conditional</animation>
			<fadetime>IconCrossfadeTime</fadetime>
		</control>
	</include>
</includes>
