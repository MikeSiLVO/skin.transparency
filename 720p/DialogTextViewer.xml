<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>61</defaultcontrol>
	<controls>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>black.png</texture>
			<animation effect="fade" start="0" end="70" time="300">WindowOpen</animation>
			<animation effect="fade" start="70" end="0" time="300">WindowClose</animation>
			<visible>!Window.IsVisible(AddonInformation)</visible>
		</control>
		<control type="group">
			<control type="image">
				<posx>0</posx>
				<posy>560</posy>
				<width>1280</width>
				<height>140</height>
				<texture border="10">underlay.png</texture>
			</control>
			<control type="label">
				<posx>265</posx>
				<posy>572</posy>
				<width>975</width>
				<height>30</height>
				<font>font-30</font>
				<textcolor>blue</textcolor>
				<shadowcolor>black</shadowcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.Label]</label>
				<visible>!stringcompare(ListItem.Label,..)</visible>
			</control>
			<control type="textbox">
				<description>textarea</description>
				<posx>265</posx>
				<posy>606</posy>
				<width>975</width>
				<height>83</height>
				<label>$INFO[ListItem.Property(Addon.Description)]</label>
				<font>font-19</font>
				<align>justify</align>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<pagecontrol>60</pagecontrol>
				<autoscroll time="3000" delay="16000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
			</control>
			<control type="image">
				<posx>8</posx>
				<posy>505</posy>
				<width>210</width>
				<height>210</height>
				<texture>thumb-shadow.png</texture>
				<visible>!stringcompare(ListItem.Label,..)</visible>
			</control>
			<control type="image">
				<posx>8</posx>
				<posy>505</posy>
				<width>210</width>
				<height>210</height>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<texture diffuse="thumb-diffuse.png" background="true">$INFO[Listitem.Icon]</texture>
				<bordersize>6</bordersize>
				<fadetime>IconCrossfadeTime</fadetime>
				<visible>!stringcompare(ListItem.Label,..)</visible>
			</control>
		</control>
		<control type="group">
			<include>dialogeffect4</include>
			<control type="button">
				<posx>1240</posx>
				<posy>20</posy>
				<width>20</width>
				<height>20</height>
				<texturefocus>close-window-focus.png</texturefocus>
				<texturenofocus>close-window-nofocus.png</texturenofocus>
				<onclick>Dialog.Close(textviewer)</onclick>
				<visible>Skin.HasSetting(TouchScreenMode)</visible>
			</control>
			<control type="label" id="1">
				<description>heading label</description>
				<posx>40</posx>
				<posy>45</posy>
				<width>1200</width>
				<height>30</height>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>blue</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>font-32</font>
				<label>-</label>
			</control>
			<control type="image">
				<posx>40</posx>
				<posy>84</posy>
				<width>1200</width>
				<height>2</height>
				<texture>separator.png</texture>
			</control>
			<control type="textbox" id="5">
				<description>textarea</description>
				<posx>200</posx>
				<posy>110</posy>
				<width>880</width>
				<height>348</height>
				<label>-</label>
				<font>font-19</font>
				<align>justify</align>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<pagecontrol>61</pagecontrol>
			</control>
			<control type="spincontrol" id="61">
				<description>Next page button</description>
				<posx>1180</posx>
				<posy>699</posy>
				<subtype>page</subtype>
				<font>font-19</font>
				<onleft>61</onleft>
				<onright>61</onright>
				<ondown>61</ondown>
				<onup>61</onup>
				<textcolor>white</textcolor>
				<showonepage>true</showonepage>
			</control>
			<control type="image">
				<posx>40</posx>
				<posy>480</posy>
				<width>1200</width>
				<height>2</height>
				<texture>separator.png</texture>
			</control>
		</control>
	</controls>
</window>
